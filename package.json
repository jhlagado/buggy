{
  "name": "tinycpu-debugger",
  "displayName": "TinyCPU Debugger",
  "description": "Debug Adapter for TinyCPU programs",
  "version": "0.0.1",
  "publisher": "buggy",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "tinycpu",
        "label": "TinyCPU Debug",
        "languages": [],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the TinyCPU program file",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop on the first instruction",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "tinycpu",
            "request": "launch",
            "name": "Debug TinyCPU Program",
            "program": "${file}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "TinyCPU: Launch",
            "description": "Launch and debug a TinyCPU program",
            "body": {
              "type": "tinycpu",
              "request": "launch",
              "name": "Debug TinyCPU Program",
              "program": "^\"\\${file}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "tinycpu"
      }
    ],
    "languages": [
      {
        "id": "tinycpu",
        "aliases": ["TinyCPU"],
        "extensions": [".tiny"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "pretest": "yarn build",
    "test": "node --test out/**/*.test.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/debugprotocol": "^1.64.0"
  }
}
